page {
    background-color: #f8f8f8;
}
.head{
    border-top:1px solid #427eff;
    padding-top: 5px;
    width: 100%;
    background-color:#427eec;
    height: 110px;
    text-align: center; 
    margin-bottom: 0px;
}


.head-img{
    width:80px;
    height:80px;
    margin: 0 0;
}
.head-nickname{
    color:white;
    font-size: 18px;
    margin: 0 0;
    margin-top: -5px;
}
.main{
    overflow: auto;
    height: calc(100% - 120px);
    position: absolute;
    width: 100%;
}

.showdetail {
    width: 32px;
    height: 24px;
    display: inline-block;
    margin: 0 auto;
}
.detail-image {
    display: inline-block;
    width: 50px;
    height: 50px;
    margin: 10px 0 0 0;
}

.detail-title {
    position: absolute;
    top: 10px;
    left: 80px;
    right:0;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;


}

.detail-price {
    position: absolute;
    top :40px ;
    left: 80px;
    color:red;
    font-size: 15px;
}

.detail-count {
    position: absolute;
    top: 40px;
    left : 80%;
    color:#999;
    font-size: 14px;
}
.detail-block {
    position: relative;
    border-top: 1px #f8f8f8 solid;
    height: 70px;
    margin:0 20px;
}
.button-view{
    width: 100%;
    height: 45px;
}
.btn1,
.btn2{
    display: inline-block;
    width: 70px;
    height:30px;
    text-align: center;
    vertical-align: center;
    font-size: 16px;
    line-height: 1.875;
}
.btn1{
    margin-right: 20px;
}
.pay-img{
    width: 250px;
    height: 250px;
}
.modal{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color:rgba(0, 0, 0, 0.5);
    text-align: center;
    padding-top: 20%;
}