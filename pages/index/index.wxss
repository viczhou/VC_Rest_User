page {
    height: 100%;
}

.menu_list {
    height: calc(100% - 70px);
    width: 25%;
    background-color: #f8f8f8;
    display: inline-block;
    vertical-align: top;
    padding-top: 20px;
}

.menu_list_edit {
    position: absolute;
    height: calc(100% - 20px);
    width: 40%;
    background-color: #f8f8f8;
    display: inline-block;
    vertical-align: top;
    padding-top: 20px;
    z-index: 100;
    left: 0;
}

.menu_data_edit {
    position: relative;
    width: calc(100% - 40px);
    display: inline-block;
    border-bottom: 1px #fff solid;
    text-align: left;
    padding: 10px 0 10px 40px;
    font-size: 14px;
    vertical-align: top;
}

.menu_data_active_edit {
    vertical-align: top;
    position: relative;
    width: calc(100% - 40px);
    display: inline-block;
    border-bottom: 1px #fff solid;
    text-align: left;
    padding: 10px 0 10px 40px;
    font-size: 14px;
    background-color: #fff;
}

.right {
    position: absolute;
    width: 150%;
    top: 0;
    left: 100%;
    height: 100%;
    background-color: rgba(248, 248, 248, 0.5);
    z-index: 100;
}

.menu_data {
    border-bottom: 1px #fff solid;
    text-align: center;
    padding: 10px 10px;
    font-size: 14px;
}

.menu_data_active {
    border-bottom: 1px #fff solid;
    text-align: center;
    padding: 10px 10px;
    font-size: 14px;
    background-color: #fff;
}

.food_list {
    width: 75%;
    height: calc(100% - 70px);
    background-color: #fff;
    display: inline-block;
    vertical-align: top;
    padding-top: 20px;
}

.menu-food {
    position: relative;
    width: 100%;
    height: 80px;
    background-color: #fff;
    border-bottom: 1px #f8f8f8 solid;
}

.border-top {
    border-top: 1px #f8f8f8 solid;
}

.menu-image {
    width: 60px;
    height: 60px;
    display: inline-block;
    margin: 10px 10px;
    vertical-align: top;
}

.menu-title {
    display: inline-block;
    position: absolute;
    top: 10px;
    right: 5px;
    left: 80px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.menu-price {
    display: inline-block;
    position: absolute;
    top: 40px;
    color: red;
    font-size: 15px;
}

/*全局样式*/

/*主容器*/

.stepper {
    display: inline-block;
    position: absolute;
    width: 80px;
    height: 26px;
    /*给主容器设一个边框*/
    border: 1px solid #ccc;
    border-radius: 3px;
    margin: 0 auto;
    top: 37px;
    right: 10px;
}

.stepper_ {
    display: inline-block;
    position: absolute;
    border: 1px solid #ccc;
    border-radius: 3px;
    margin: 0 auto;
    top: 37px;
    right: 10px;
    width: 22px;
    height: 22px;
    text-align: center;
}

.ste_img {
    width: 24px;
    height: 24px;
    margin-left: -1px;
    margin-top: -1px;
}

/*加号和减号*/

.stepper text {
    width: 19px;
    line-height: 26px;
    text-align: center;
    float: left;
}

/*数值*/

.stepper input {
    width: 40px;
    height: 26px;
    float: left;
    margin: 0 auto;
    text-align: center;
    font-size: 12px;
    /*给中间的input设置左右边框即可*/
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
    color: black;
}

/*禁用样式*/

.stepper .disabled {
    color: #ccc;
}

.cate {
    width: 100%;
    height: 49px;
    border-top: 1px solid #f8f8f8;
    position: relative;
}

.confirm {
    position: absolute;
    right: 0;
    height: 37px;
    color: #1aad19;
    width: 27%;
    text-align: center;
    font-size: 20px;
    padding-top: 12px;
    display: inline-block;
    border-left: 1px solid #f8f8f8;
}

.cateImg {
    width: 60px;
    height: 60px;
    position: absolute;
    top: -20px;
    left: 30px;
    z-index: 1000;
}

.totalMoney {
    position: absolute;
    left: 100px;
    font-size: 18px;
}

.count {
    position: absolute;
    left: 103px;
    bottom: 5px;
    font-size: 14px;
    color: #ccc;
}

.cate-detail-disable {
    position: absolute;
    width: 100%;
    height: 0;
    bottom: 50px;

}

.cate-detail {
    position: absolute;
    width: 100%;
    height: auto; 
    background-color: white;
    max-height: 70%; 
    bottom: 50px;
    
}

.detail-item {
    position: relative;
    width: calc(100% - 60px);
    height: 60px;
    margin: 0 30px;
    border-bottom: 1px solid #f8f8f8;
}
